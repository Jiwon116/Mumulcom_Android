<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background">

    <ImageView
        android:id="@+id/questioncategoryBackgroundIv"
        android:layout_width="318dp"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageButton
        android:id="@+id/questioncategorySelectCompletionIb"
        android:layout_width="68.25dp"
        android:layout_height="33.23dp"
        android:src="@drawable/ic_bf_selectcompletion"
        android:scaleType="fitXY"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="@id/questioncategoryConceptQuestionIb"
        android:layout_marginTop="33.23dp"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageButton
        android:id="@+id/questioncategoryClickSelectCompletionIb"
        android:layout_width="68.25dp"
        android:layout_height="33.23dp"
        android:src="@drawable/ic_select_complete"
        android:scaleType="fitXY"
        android:background="@color/background"
        app:layout_constraintEnd_toEndOf="@id/questioncategoryConceptQuestionIb"
        android:layout_marginTop="33.23dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/questioncategoryTextTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="질문 유형을 선택해주세요."
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="755px"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="60dp"/>

    <!--    <RadioGroup-->
    <!--        android:id="@+id/questioncategoryOne"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:orientation="horizontal"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@id/questioncategoryTextTv">-->

    <ImageButton
        android:id="@+id/questioncategoryCodingQuestionIb"
        android:layout_width="127.96dp"
        android:layout_height="35.83dp"
        android:src="@drawable/coding_question_img"
        android:scaleType="fitXY"
        android:background="@color/background"
        android:button="@null"
        app:layout_constraintTop_toBottomOf="@id/questioncategoryTextTv"
        android:layout_marginTop="167px"
        app:layout_constraintStart_toStartOf="@id/questioncategoryBackgroundIv"
        android:layout_marginStart="21.3dp"/>



    <ImageButton
        android:id="@+id/questioncategoryConceptQuestionIb"
        android:layout_width="127.96dp"
        android:layout_height="35.83dp"
        android:src="@drawable/ic_concept_question_img"
        android:scaleType="fitXY"
        android:background="@color/background"
        android:button="@null"
        app:layout_constraintTop_toBottomOf="@id/questioncategoryTextTv"
        android:layout_marginTop="167px"
        app:layout_constraintStart_toEndOf="@id/questioncategoryCodingQuestionIb"
        android:layout_marginStart="89px"

        />

    <ImageButton
        android:id="@+id/questioncategoryClickCodingQuestionIb"
        android:layout_width="127.96dp"
        android:layout_height="35.83dp"
        android:src="@drawable/coding_question_img"
        android:scaleType="fitXY"
        android:background="@color/background"
        android:button="@null"
        app:layout_constraintTop_toBottomOf="@id/questioncategoryTextTv"
        android:layout_marginTop="167px"
        app:layout_constraintStart_toStartOf="@id/questioncategoryCodingQuestionIb"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/questioncategoryClickConceptQuestionIb"
        android:layout_width="127.96dp"
        android:layout_height="35.83dp"
        android:src="@drawable/ic_concept_question_check_img"
        android:scaleType="fitXY"
        android:background="@color/background"
        android:button="@null"
        app:layout_constraintTop_toBottomOf="@id/questioncategoryTextTv"
        android:layout_marginTop="167px"
        app:layout_constraintEnd_toEndOf="@id/questioncategoryConceptQuestionIb"
        android:visibility="gone"
        />

    <!--    </RadioGroup>-->

</androidx.constraintlayout.widget.ConstraintLayout>