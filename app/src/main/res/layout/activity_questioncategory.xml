<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/questioncategorySelectCompletionIv"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/ic_bf_selectcompletion"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/questioncategory_button_ly"/>

    <!-- 코딩질문 개념질문 -->
    <LinearLayout
        android:id="@+id/questioncategory_button_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/questioncategoryCodingQuestionIv"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:src="@drawable/coding_question_img"
            android:background="@color/background" />

        <ImageView
            android:id="@+id/questioncategoryConceptQuestionIv"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_concept_question_img"
            android:background="@color/background" />

    </LinearLayout>

    <TextView
        android:id="@+id/questioncategoryTextTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:text="질문 유형을 선택해주세요."
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/questioncategory_button_ly"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>